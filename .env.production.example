# Production Environment Variables Template
# Copy these to your Vercel project's environment variables

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_xxx
CLERK_SECRET_KEY=sk_live_xxx
CLERK_WEBHOOK_SECRET=whsec_xxx

# Clerk URLs (use your production domain)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/onboarding
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# UploadThing
UPLOADTHING_TOKEN=xxx

# Google Gemini AI (Required for transcription)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash
GEMINI_TRANSCRIPTION_MODEL=gemini-2.0-flash
GEMINI_ANALYSIS_MODEL=gemini-2.0-flash

# OpenAI (Optional - alternative to Gemini for chat/intake)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o

# AI Provider Selection: "gemini" or "openai" (default: gemini)
AI_PROVIDER=gemini

# Application (IMPORTANT: Set to your actual Vercel URL)
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# Stream Video SDK
STREAM_API_KEY=your_stream_api_key_here
STREAM_SECRET_KEY=your_stream_secret_key_here

# Build Configuration (Optional)
NEXT_TELEMETRY_DISABLED=1
