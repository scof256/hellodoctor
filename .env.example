# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx
CLERK_WEBHOOK_SECRET=whsec_xxx

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/onboarding
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# UploadThing
UPLOADTHING_TOKEN=xxx

# Google Gemini AI
# NOTE: GEMINI_API_KEY is ALWAYS required for transcription/scribe features,
# even when using OpenAI as the main AI provider. Gemini SDK is the only
# supported backend for audio transcription.
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash
GEMINI_TRANSCRIPTION_MODEL=gemini-2.0-flash
GEMINI_ANALYSIS_MODEL=gemini-2.0-flash

# OpenAI (alternative to Gemini for chat/intake features)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1  # Optional: custom base URL for OpenAI-compatible APIs
OPENAI_MODEL=gpt-4o

# AI Provider Selection: "gemini" or "openai" (default: gemini)
# This controls the chat/intake AI provider. Transcription always uses Gemini.
AI_PROVIDER=gemini

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Stream Video SDK
STREAM_API_KEY=your_stream_api_key_here
STREAM_SECRET_KEY=your_stream_secret_key_here
